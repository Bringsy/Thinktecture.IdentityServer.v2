@using Thinktecture.IdentityServer.Web.App_LocalResources.Shared
<div class="menu">
	@if (ViewBag.IsAdministrator)
	{
		@Html.ActionLink(_Menu_cshtml.Administration, "index", "home", new { area = "Admin" }, null)
		@: &nbsp;
    }

	@if (ViewBag.IsSignedIn)
	{
		@Html.ActionLink(_Menu_cshtml.Home, "index", "home", new { area = "" }, null)
		@: &nbsp;
		@Html.ActionLink(_Menu_cshtml.SignOut, "index", "signout", new { area = "" }, null)
		@: &nbsp;
		@Html.ActionLink("[" + Context.User.Identity.Name + "]", "index", "account", new { area = "" }, null)
	}
	else
	{
		@Html.ActionLink(_Menu_cshtml.Home, "index", "home", new { area = "" }, null)
		@: &nbsp;
		@Html.ActionLink(_Menu_cshtml.SignIn, "index", "signin", new { area = "" }, null)
		@: &nbsp;
		@Html.ActionLink("[sign up]", "index", "signup", new { area = "" }, null)
	}
</div>
